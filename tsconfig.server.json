{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "../../build/server",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/server/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}